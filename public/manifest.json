{
  "manifest_version": 3,
  "name": "Picture in Popup",
  "description": "put your videos in a window",
  "version": "1.0",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "permissions": ["tabs", "background", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Picture in Popup",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
